<Application x:Class="CryptoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:CryptoApp.ViewModel"
             xmlns:view="clr-namespace:CryptoApp.View">

    <Application.Resources>

        <DataTemplate DataType="{x:Type TypeName=viewModel:CoinPageViewModel}">
            <view:CoinPage />
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:HomePageViewModel}">
            <view:HomePage />
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:CandlesPageViewModel}">
            <view:CandlesPage />
        </DataTemplate>

    </Application.Resources>
</Application>